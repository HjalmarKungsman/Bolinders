                </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th class="table" style="width:83px">Editor</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr onclick="">
                <td class="table-bordered">
                    <input type="checkbox" name="selectedVehicles" value="@item.Id">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelDescription)
                </td>
                <td style="border-left:solid thin  #e6e6e6">
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Used)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leasable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.Name)
                </td>
                <td class="table-bordered" ´>
                    <a asp-action="Edit" asp-route-id="@item.Id"><span title="Edit" class="glyphicon glyphicon-edit"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><span title="Details" class="glyphicon glyphicon-list-alt"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><span title="Delete" class="glyphicon glyphicon-trash"></span></a>
                </td>
</tr>
}
    </tbody>
</table>
<p>
    <a onclick="collect()" class="btn btn-danger">Delete Selected</a>
</p>
<script>
    function collect() {
        var arrayId = new Array();
        var checkboxes = document.querySelectorAll('input[name=selectedVehicles]:checked')

        for (var i = 0; i < checkboxes.length; i++) {
            arrayId.push(checkboxes[i].value)
        }
        $.ajax({
            url: '@Url.Action("DeleteSelected", "Vehicles")',
            type: 'POST',
            traditional: true,
            data: { selectedVehicles: arrayId },
            error: function () {
                console.log("error");
            }
        }).done(function () {
            console.log(arrayId + " it is done");
            location.reload();
        });

    }
</script>
