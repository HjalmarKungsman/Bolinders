@model VehicleListViewModel

<br /><br />

<div>
    <form method="post" asp-action="list" asp-controller="vehicles">
        <div class="row">
            <div class="col-md-12">
                <label for="searchText">Söktext</label>
                <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Söktext" value="@ViewBag.SearchText" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="priceFrom">Pris från</label>
                <input type="number" class="form-control" id="priceFrom" name="priceFrom" placeholder="Pris från" value="@ViewBag.PriceFrom" />
            </div>
            <div class="col-md-4">
                <label for="mileFrom">Mil från</label>
                <input type="number" class="form-control" id="mileageTo" name="mileageFrom" placeholder="Mil från" value="@ViewBag.MileageFrom" />
            </div>
            <div class="col-md-4">
                <label for="yearFrom">År från</label>
                <input type="number" class="form-control" id="yearFrom" name="yearFrom" placeholder="År från" value="@ViewBag.YearFrom" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="priceTo">Pris till</label>
                <input type="number" class="form-control" id="priceTo" name="priceTo" placeholder="Pris till" value="@ViewBag.PriceTo" />
            </div>
            <div class="col-md-4">
                <label for="mileTo">Mil till</label>
                <input type="number" class="form-control" id="mileageTo" name="mileageTo" placeholder="Mil till" value="@ViewBag.MileageTo" />
            </div>
            <div class="col-md-4">
                <label for="yearTo">År till</label>
                <input type="number" class="form-control" id="yearTo" name="yearTo" placeholder="År till" value="@ViewBag.YearTo" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="bodyType">Kaross</label>
                <input type="text" class="form-control" id="bodyType" name="bodyType" placeholder="Kaross" value="@ViewBag.BodyType" />
            </div>
            <div class="col-md-4">
                <label for="gearbox">Växellåda</label>
                <input type="text" class="form-control" id="gearbox" name="gearbox" placeholder="Växellåda" value="@ViewBag.Gearbox" />
            </div>
            <div class="col-md-4">
                <label>&nbsp;</label><br />
                <button type="submit" class="btn btn-default">Filtrera/Sök</button>
                <input type="hidden" id="page" name="page" value="1" />
            </div>
        </div>
        
</form>
</div>
<br />

@foreach (var p in Model.Vehicles)
{
@Html.Partial("VehicleBlock", p)
}

<div page-model="@Model"
     page-action="List"
     enable-page-classes="true"
     page-class="btn"
     page-class-normal="btn-default"
     page-class-selected="btn-primary"
     class="btn-group"></div>