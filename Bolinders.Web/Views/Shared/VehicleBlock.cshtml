@model Vehicle
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <h4><strong>@Model.Make.Name @Model.Model</strong></h4>
                <p>@Model.FuelType</p>
                <p>@Model.ModelDescription</p>
                <span>@($"Pris: {Model.Price}")</span>
            </div>
            <div class="col-md-6">
                <img src="http://via.placeholder.com/150x150" class="pull-right" />
            </div>
        </div>
    </div>
</div>